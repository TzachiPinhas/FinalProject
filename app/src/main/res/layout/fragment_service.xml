<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_light"
    tools:context=".ui.ServiceFragment">

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/table_LBL_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_height"
        android:layout_margin="@dimen/margin_5"
        android:gravity="center"
        android:text="Select a Service:"
        android:textColor="@color/black"
        android:textSize="@dimen/text_size30"
        android:textStyle="bold" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/main_LST_service"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/table_LBL_title"
        android:layout_centerInParent="true"
        tools:listitem="@layout/horisontal_service_item" />


</RelativeLayout>